    <h1 class="skill_heading intro">Skill</h1>
    <div class="skill" id="skill">     
            <div class="intro">
                <p class="intro">Programing Languages</p>
                <% for(skill of skills){ %>
                    <% if(skill.skill_name=="Programing Language"){ %>
                        <label class="intro" for="c"><%= skill.skill_type %>:</label>
                        <progress value="<%= skill.persentage %>" max="100" class="progress"></progress>
                        <br><br>
                    <% } %>
                <% } %>
            </div>
            <div class="intro">
                <p class="intro">Web Development</p>
                <% for(skill of skills){ %>
                    <% if(skill.skill_name=="Web Development"){ %>
                        <label class="intro" for="c"><%= skill.skill_type %>:</label>
                        <progress value="<%= skill.persentage %>" max="100" class="progress"></progress>
                        <br><br>
                    <% } %>
                <% } %>
            </div>
        <div class="intro">
            <p class="intro">Data Base</p>
            <% for(skill of skills){ %>
