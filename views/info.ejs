                    <progress value="<%= skill.persentage %>" max="100" class="progress"></progress>
                    <br><br>
                <% } %>
            <% } %>
        </div>
    </div>
    <h1 class="skill_heading intro">Project</h1>
    <% for(let project of projects){ %>
        <div id="project" class="project">
            <div class="single_project">
                    <a href="<%= project.Link %>"><h1><%= project.Name %></h1></a>
                    <p><%= project.Descripion %></p>
            </div>
        </div>
    <% } %>
    </div>
    <div class="contact" id="contact">
        <h1 class="skill_heading intro">Suggestion</h1>
        <div class="contact c_center">
            <form method="post" action="/message" class="contact">
                <label class="cname">Name:</label>
                <input type="text" name="name" placeholder="Name">
                <br><br>
                <label class="cname">Email:</label>
                <input type="email" name="email" placeholder="Email@gmail.com">
                <br><br>
                <label class="cname">Descripion</label>
                <textarea class="cname" name="messages" required cols="50" rows="5"></textarea>
