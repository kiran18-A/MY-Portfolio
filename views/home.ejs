        @media screen and (min-width:0px) and (max-width:780px){
            * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}

body, html {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #070909, hsl(60, 0%, 55%));
}

/* Background Styling */
.background {
    position: absolute;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, rgba(217, 220, 221, 0.3), rgba(80, 148, 212, 0.2));
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.background::before {
    content: '';
    position: absolute;
    width: 200vw;
    height: 50vw;
    background: radial-gradient(circle, rgba(255,255,255,0.05), rgba(0,0,0,0));
    animation: rotateBackground 20s infinite linear;
}

@keyframes rotateBackground {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

/* Container */
.login-container {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    padding: 40px;
    border-radius: 15px;
    width: 400px;
    box-shadow: 0 10px 50px rgba(0, 0, 0, 0.3);
    text-align: center;
    animation: fadeInUp 0.8s ease forwards;
    transform: translateY(50px);
    opacity: 0;
}

@keyframes fadeInUp {
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Header */
.header h2 {
    font-size: 25   px;
    color: #f7f4f2;
    margin-bottom: 10px;
}

.header p {
    color: #e2dddd;
    font-size: 10px;
}

/* Input Fields */
.input-group {
    position: relative;
    margin: 30px 0;
}

.input-group input {
    width: 100%;
    padding: 12px;
    border: none;
    background: transparent;
    border-bottom: 2px solid rgba(255,255,255,0.6);
    color: #fff;
    outline: none;
    transition: border-bottom-color 0.3s ease, background-color 0.3s ease;
    font-size: 16px;
}

.input-group input:focus {
    border-bottom-color: #00ffcc;
}

.input-group label {
    position: absolute;
    top: 50%;
    left: 0;
    color: rgba(255,255,255,0.6);
    font-size: 16px;
    pointer-events: none;
    transform: translateY(-50%);
    transition: 0.3s ease;
}

.input-group input:focus + label,
.input-group input:not(:placeholder-shown) + label {
    transform: translateY(-150%);
    font-size: 12px;
    color: #e5e9e8;
}

/* Button */
button {
    width: 100%;
    padding: 12px;
    background: linear-gradient(135deg, #cbdddd, #3c4446);
    color: #fff;
    border: none;
    border-radius: 25px;
    font-size: 18px;
    cursor: pointer;
    transition: transform 0.3s ease;
}

button:hover {
    transform: scale(1.05);
}

button:active {
    transform: scale(0.95);
}

/* Footer */
.footer-text {
    color: #eee;
    margin-top: 20px;
}

.footer-text a {
    color: #89fffd;
    text-decoration: none;
    transition: color 0.3s ease;
}

.footer-text a:hover {
    color: #00ffcc;
}
